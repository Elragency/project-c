---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
{
    "isRightSection": true,
    "title": "Notre Histoire",
    "subTitle": "Gestion immobilière Laucandrique Inc. est née en 1998 d’une fusion de Gestion Lauca Inc. et Services Andrique Inc. Les deux entreprises avaient comme mission commune d’accompagner les conseils d’administration de syndicats de copropriété dans la conservation de leur bien immobilier et la défense des intérêts communs des copropriétaires, et ce depuis 1987. Les besoins de ressources humaines et d’expertises complémentaires sont aux nombres des motifs qui ont justifié l’union des 2 entrepreneurs de la 1re génération de gestionnaires de copropriétés au Québec.",
    "single": false,
    "imgOne": blueprints,
    "imgOneAlt": "Plans et tablette numérique avec des plans de construction.",
    "imgTwo": personWorking,
    "imgTwoAlt": "Personne travaillant au bureau"
  },
  {
    "isRightSection": false,
    "title": "Une fondations solide",
    "subTitle": "Après plus de 35 ans d’expérience dans le domaine, Gestion Immobilière Laucandrique a su se tailler une place de leader dans le domaine de la copropriété au Québec. Au fil des ans, le bouche-à-oreille a permis à l’entreprise de se constituer une clientèle fidèle grâce aux services rendus par les membres de l’organisation. Devant une demande croissante, le besoin d’une main-d’œuvre spécialisée a été nécessaire pour assurer le niveau de qualité qu’elle désirait offrir. De fil en aiguille, l’organisation a pris de l’ampleur et est devenue une référence dans l’industrie.",
    "img": beforeAfter,
    "imgAlt": "Chantier de construction avant et après",
    "btnExists": true,
    "btnTitle": "Faisons affaires!",
    "btnURL": "/contact"
  },
  {
    "isRightSection": true,
    "title": "Laucandrique aujourd'hui c'est",
    "subTitle": "Près de 12 000 unités sous gestion répartis dans plus de 480 syndicats, une équipe de plus de 55 employés et collaborateurs dans deux bureaux au québec. Gestion Immobilière Laucandrique navigue parmi les grands du marché. L’ajout de membres d’expertises variés dans le domaine de l’immobilier a permis d’assurer une continuité dans le succès de l’entreprise.",
    "single": false,
    "imgOne": constructionWorkers,
    "imgOneAlt": "Ouvriers du bâtiment orchestrant un projet",
    "imgTwo": aerialView,
    "imgTwoAlt": "Vue aérienne d'une construction gérée"
  },
  {
    "isRightSection": false,
    "title": "Une mission qui nous rassemble",
    "subTitle": "Laucandrique se donne comme mission d’offrir une expérience client unique, qui se distingue de ce que l’on voit présentement sur le marché. Nos employés ont comme but premier d’accompagner le conseil d’administration et les copropriétaires afin d’offrir une expérience de gestion optimale, un service personnalisé, un excellent rapport qualité-prix et des outils qui s’adaptent à vos besoins.",
    "img": usingTools,
    "imgAlt": "Homme en gilet orange et noir portant un casque blanc tenant un outil électrique jaune et noir"
  },
  {
    "isRightSection": true,
    "title": "Une vision qui va loin",
    "subTitle": "Laucandrique a comme vision d’accompagner tous les syndicats de copropriétés souhaitant être soutenus et entourés d’une équipe compétente, fiable et intègre dans ses méthodes de gestion. Nous aspirons à maintenir notre clientèle avec des valeurs d’excellence, de transparence et de respect afin de bâtir une relation à long terme.",
    "single": false,
    "imgOne": progressBuilding,
    "imgOneAlt": "Structure de bâtiment en cours de construction",
    "imgTwo": underConstruction,
    "imgTwoAlt": "Bâtiment marron et gris en construction",
    "btnExists": true,
    "btnTitle": "Faisons affaires!",
    "btnURL": "/contact"
  }
]
---

<MainLayout
  title="Qui sommes-nous | Gestion Laucandrique"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://horuss.ca/ressources",
    url: "https://horuss.ca/ressources",
    name: "Expert Consultation Services | Gestion Laucandrique",
    description:
      "Uniting expertise with your vision, Horuss provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://horuss.ca/ressources",
      name: "Horuss",
      description:
        "Horuss offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Unir l'expertise à votre vision"
    subTitle="Chez Gestion Laucandrique, nous sommes fiers de fournir des solutions complètes et un service exceptionnel dans l'industrie de la gestion de copropriétés. Notre équipe expérimentée est dédiée à soutenir votre projet de sa conception à son achèvement avec une gamme de services spécialisés."
    btnExists={true}
    btnTitle="Planifier une consultation"
    btnURL={getRelativeLocaleUrl("fr", "/contact")}
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Laucandrique en chiffres"
    subTitle="Notre engagement envers la qualité et la fiabilité est évident dans chaque projet que nous entreprenons. Chez Gestion Laucandrique, nous nous engageons à fournir des services de premier plan dans l'industrie qui garantissent que vos projets de construction sont conçus pour durer."
    mainStatTitle="480+"
    mainStatSubTitle="Syndicats de copropriétés nous font confiance au Québec"
    stats={[
      {
        stat: "$3.6 Milliards",
        description: "valeur de notre portfolio",
      },
      {
        stat: "12 000+",
        description: "Portes sous gestion",
      },
      {
        stat: "$580 Millions",
        description: "Budget annuel total des syndicats sous notre gestion",
      },
    ]}
  />
</MainLayout>
